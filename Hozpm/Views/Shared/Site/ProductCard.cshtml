<div class="product-cards">
	@for (var i = 1; i < 11; i++)
	{
		var link = i%2 == 0 ? Url.Action("Product", "Catalog") : Url.Action("Kit", "Catalog");

		<div class="card-wrap">
			<a href="@link" class="product-card">
				<div class="content">
					<p class="clearfix">
						<span class="code pull-left"><i>Артикул:</i> <span>A000000</span></span>
						<span class="kit pull-right">Набор: <span class="glyphicon glyphicon-ok"></span></span>
					</p>
					<p class="caption text-justify">Продукция с описанием среднестатистической длины или даже очень длинным названием или даже невероятно длинным названием омг какой длины хД @i</p>
					<img src="http://placehold.it/285x160" alt="" class="img-responsive center-block image" />
					<div class="btn btn-link btn-block link">Подробнее</div>
				</div>
			</a>
		</div>
	}
</div>
